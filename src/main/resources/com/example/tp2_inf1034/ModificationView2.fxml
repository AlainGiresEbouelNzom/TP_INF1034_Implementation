<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="fenetre" alignment="TOP_LEFT" spacing="20.0" stylesheets="@../../../styles/modification.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tp2_inf1034.ModifReservation2Controller">
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
    </padding>

    <Label styleClass="titre" text="Modifiez les champs" />

    <HBox>
        <Label>La date</Label> <!--doit etre plus grande que la date actuelle et pas trop loin-->
        <DatePicker fx:id="modif_date" prefHeight="23.0" prefWidth="468.0" />
    </HBox>
    <HBox>
        <Label>L'heure :</Label>
        <VBox>
            <ChoiceBox fx:id="heure" value="HH">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Integer fx:value="5" />
                        <Integer fx:value="6" />
                        <Integer fx:value="7" />
                        <Integer fx:value="8" />
                        <Integer fx:value="9" />
                        <Integer fx:value="10" />
                        <Integer fx:value="11" />
                        <Integer fx:value="12" />
                        <Integer fx:value="13" />
                        <Integer fx:value="14" />
                        <Integer fx:value="15" />
                        <Integer fx:value="16" />
                        <Integer fx:value="17" />
                        <Integer fx:value="17" />
                        <Integer fx:value="19" />
                        <Integer fx:value="20" />
                        <Integer fx:value="21" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </VBox>
        <VBox>
            <ChoiceBox fx:id="min" value="MM">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Integer fx:value="00" />
                        <Integer fx:value="15" />
                        <Integer fx:value="30" />
                        <Integer fx:value="45" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </VBox>

    </HBox>
    <HBox>
        <Label>Activité</Label>
        <ChoiceBox fx:id="activite" value="Choisissez une activité">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Badminton" />
                    <String fx:value="Soccer" />
                    <String fx:value="Musculation" />
                    <String fx:value="Tenis" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </HBox>


    <HBox alignment="BOTTOM_RIGHT">
        <padding>
            <Insets bottom="20.0" left="20.0" />
        </padding>

        <Button fx:id="reinitialiser" onMouseClicked="#reinitialiserChamps">Reinitialiser</Button>
        <Button fx:id="enregistrer" onMouseClicked="#onSauvegarderBtnClick">Enregistrer</Button>

    </HBox>
    <Label fx:id="message1" />
    <Label fx:id="message2" />

</VBox>
