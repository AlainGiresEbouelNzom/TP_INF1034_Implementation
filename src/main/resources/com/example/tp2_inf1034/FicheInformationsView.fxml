                <image>
                    <Image url="@../../../images/notes-autocollantes.png" />
                </image>
            </ImageView>
        </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
    </AnchorPane>
</top>

    <center>

        <GridPane hgap="10" vgap="10">
            <Label text="Musculation" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button fx:id="musculationBtn" onAction="#onMusculation" text="Plus d'infos" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Text fx:id="retroactionSalle" styleClass="textClass" GridPane.columnIndex="0" GridPane.rowIndex="1" />

