            <Button fx:id="soccerBtn" onAction="#onSoccer" text="Plus d'infos" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Text fx:id="retroactionSoccer" styleClass="textClass" GridPane.columnIndex="0" GridPane.rowIndex="3" />

            <Label text="Badminton" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Button fx:id="badmintonBtn" onAction="#onBadminton" text="Plus d'infos" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Text fx:id="retroactionBad" styleClass="textClass" GridPane.columnIndex="0" GridPane.rowIndex="5" />

            <Label text="Tenis" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Button fx:id="tenisBtn" onAction="#onTenis" text="Plus d'infos" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Text fx:id="retroactionTenis" styleClass="textClass" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <columnConstraints>
                <ColumnConstraints />
