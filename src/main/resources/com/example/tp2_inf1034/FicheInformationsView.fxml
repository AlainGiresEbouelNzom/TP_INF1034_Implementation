<BorderPane id="informationVbox" styleClass="acceuilClass" stylesheets="@../../../styles/informations.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tp2_inf1034.FicheInformations">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
<top>

    <AnchorPane prefHeight="45.0" prefWidth="540.0" BorderPane.alignment="CENTER">
        <children>

            <!--Le titrre de la page-->
            <Label layoutX="141.0" prefHeight="27.0" prefWidth="270.0" styleClass="titre" text="Informations sur les activités" AnchorPane.leftAnchor="141.0" AnchorPane.topAnchor="50.0">Modifier une réservation </Label>
